        },
        "bastionHosts_BastionVM_name": {
            "defaultValue": "BastionVM",
            "type": "String"
        },
        "networkInterfaces_vm1465_name": {
            "defaultValue": "vm1465",
            "type": "String"
        },
        "publicIPAddresses_VM1_ip_name": {
            "defaultValue": "VM1-ip",
            "type": "String"
